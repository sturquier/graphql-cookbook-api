  "license": "MIT",
  "bugs": {
    "url": "https://github.com/sturquier/graphql-cookbook-api/issues"
  },
  "homepage": "https://github.com/sturquier/graphql-cookbook-api#readme",
  "dependencies": {
    "copyfiles": "^2.1.0",
    "mysql": "^2.16.0",
    "rimraf": "^2.6.2",
    "typescript": "^3.2.2",
    "vesper": "^0.1.9"
  },
  "devDependencies": {
    "ts-node": "^7.0.1"
  }
}
