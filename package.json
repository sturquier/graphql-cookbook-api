  "description": "GraphQL food API developed in Typescript with Vesper Framework",
  "main": "src/index.ts",
  "scripts": {
    "dev": "ts-node src/index.ts",
    "start": "npm run build",
    "build": "rimraf build && tsc && copyfiles -u 1 src/schema/**/*.graphql build && node build/index.js"
  },
